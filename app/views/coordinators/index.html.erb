<p id="notice"><%= notice %></p>

<h1>Coordinators</h1>

<table>
  <thead>
    <tr>
      <td>email</td>
      <td>name</td>
      <td>phone_number</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coordinators.each do |coordinator| %>
      <tr>
        <td><%= coordinator.email %></td>
        <td><%= coordinator.name %></td>
        <td><%= coordinator.phone_number %></td>
        <td><%= link_to 'Show', coordinator %></td>
        <td><%= link_to 'Edit', edit_coordinator_path(coordinator) %></td>
        <td><%= link_to 'Destroy', coordinator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'export participants', export_participants_coordinator_path(coordinator, format: :csv)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

